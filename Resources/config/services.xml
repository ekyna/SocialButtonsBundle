<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults autoconfigure="false" autowire="false" public="false"/>

        <!-- Helper -->
        <service id="Ekyna\Bundle\SocialButtonsBundle\Service\SocialHelper">
            <argument type="service" id="Symfony\Component\Translation\TranslatorInterface"/>
            <argument type="collection"/><!-- Replaced by DI extension -->
        </service>

        <!-- Renderer -->
        <service id="Ekyna\Bundle\SocialButtonsBundle\Service\SocialRenderer">
            <argument type="service" id="Ekyna\Bundle\SocialButtonsBundle\Service\SocialHelper"/>
            <argument type="service" id="Symfony\Component\EventDispatcher\EventDispatcherInterface"/>
            <argument type="service" id="Twig\Environment"/>
            <argument type="collection"/><!-- Replaced by DI extension -->
            <tag name="twig.runtime"/>
        </service>

        <!-- Twig extension -->
        <service id="Ekyna\Bundle\SocialButtonsBundle\Twig\SocialExtension">
            <tag name="twig.extension"/>
        </service>

    </services>

</container>
