{% block link_buttons %}
{% apply spaceless %}
<ul{{ block('attributes') }}>
    {% for link in links %}
        <li>{{ block('link_button') }}</li>
    {% endfor %}
</ul>
{% endapply %}
{% endblock link_buttons %}

{% block link_button %}
{% apply spaceless %}
<a class="social-link-button social-link-{{ link.name }}" href="{{ link.url }}" title="{{ link.title }}">
    <i class="{{ icon_prefix ~ link.icon }}"></i>
</a>
{% endapply %}
{% endblock link_button %}

{% block share_buttons %}
{% apply spaceless %}
<ul{{ block('attributes') }}>
    {% for button in buttons %}
        <li>{{ block('share_button') }}</li>
    {% endfor %}
</ul>
{% endapply %}
{% endblock share_buttons %}

{% block share_button %}
{% apply spaceless %}
<a class="social-share-button social-share-{{ button.name }}" href="{{ button.url }}" title="{{ button.title }}">
    <i class="{{ icon_prefix ~ button.icon }}"></i>
</a>
{% endapply %}
{% endblock share_button %}

